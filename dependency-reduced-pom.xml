<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>liquibase-parent-pom</artifactId>
    <groupId>org.liquibase</groupId>
    <version>0.5.8</version>
    <relativePath>../pom.xml/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>liquibase-aws-license-service</artifactId>
  <version>1.5.0</version>
  <url>http://www.liquibase.com</url>
  <licenses>
    <license>
      <name>Liquibase End-User License Agreement</name>
      <url>https://www.liquibase.com/eula</url>
    </license>
  </licenses>
  <scm>
    <tag>temp</tag>
  </scm>
  <build>
    <plugins>
      <plugin>
        <groupId>eu.somatik.serviceloader-maven-plugin</groupId>
        <artifactId>serviceloader-maven-plugin</artifactId>
        <version>1.4.0</version>
        <executions>
          <execution>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <services>
            <param>liquibase.license.LicenseService</param>
          </services>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.6.0</version>
        <executions>
          <execution>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <useDependencyReducedPomInJar>false</useDependencyReducedPomInJar>
              <minimizeJar>false</minimizeJar>
              <transformers>
                <transformer />
                <transformer>
                  <manifestEntries>
                    <Implementation-Title>Liquibase AWS License Service Extension</Implementation-Title>
                    <Bundle-Vendor>Liquibase</Bundle-Vendor>
                    <Bundle-Version>${project.version}</Bundle-Version>
                  </manifestEntries>
                </transformer>
              </transformers>
              <createDependencyReducedPom>true</createDependencyReducedPom>
              <keepDependenciesWithProvidedScope>false</keepDependenciesWithProvidedScope>
              <promoteTransitiveDependencies>true</promoteTransitiveDependencies>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                    <exclude>META-INF/maven/**</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.target>1.8</maven.compiler.target>
    <sonar.tests>src/test/groovy</sonar.tests>
    <maven.compiler.source>1.8</maven.compiler.source>
    <liquibase.version>4.32.0</liquibase.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
